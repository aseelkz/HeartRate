<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a.heartrate.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Heart Rate Calculator"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/welcome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:typeface="serif"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age:"
                android:id="@+id/AgeVw"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:typeface="serif" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ageTx"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="60dp"
                android:maxLines="1"
                android:lines="1"
                android:numeric="integer"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Target Heart Rate:"
                android:id="@+id/targetVw"
                android:textSize="22dp"
                android:typeface="serif"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" "
                android:id="@+id/targetCalc"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:typeface="serif"
                android:textSize="22dp"
                android:background="#d0add5b1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/dash"
                android:layout_gravity="center"
                android:textSize="30dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/targetCalc2"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:typeface="serif"
                android:background="#d0add5b1"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Maximum Heart Rate:"
                android:id="@+id/maxVw"
                android:textSize="22dp"
                android:typeface="serif"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/maxCalc"
                android:layout_gravity="center"
                android:typeface="serif"
                android:textSize="22dp"
                android:layout_marginLeft="40dp"
                android:background="#c7f48888"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/warning"
            android:id="@+id/warning"
            android:layout_gravity="center_horizontal"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>
</RelativeLayout>
